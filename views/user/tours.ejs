    <script>
        function sendToWhatsApp(event) {
            event.preventDefault();
        
            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;
            const phone = document.getElementById("phone").value;
            const adults = document.getElementById("adults").value;
            const children = document.getElementById("children").value;
            const message = document.getElementById("message").value;
            const tourName = "<%= tour.tourName %>";
        
            const whatsappNumber = "+971545800101";  // Replace with your WhatsApp number in international format, e.g., "1234567890"
            
            const whatsappMessage = 
                `Booking Details:\ntourName: ${tourName}\nName: ${name}\nEmail: ${email}\nPhone: ${phone}\nAdults: ${adults}\nChildren: ${children}\nMessage: ${message}`;
        
            const url = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
        
            window.open(url, "_blank");
        }
        </script>
