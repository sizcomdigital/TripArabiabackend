            <%-include('../layouts/user/header.ejs')%>

            <main id="main">
                <section class="breadcumb-section" style="background-image: url('<%= 
                categoryName === 'Liwa Desert Safari Tours' ? './assets/images/page/Liwa Desert Safari Tours.png' :
                categoryName === 'City Sightseeing Tours' ? './assets/images/page/City Sightseeing Tours.png' :
                categoryName === 'Luxury Sea Tours' ? './assets/images/page/LuxurySeaTours.png' :
                categoryName === 'Hummer Desert Safari Tours' ? './assets/images/page/HummerDesertSafariTours.png' :
                './assets/images/page/tourbanner1.png' %>'); background-size: cover; background-position: center; background-repeat: no-repeat; padding: 137px 0px 135px 0px">
                <div class="tf-container">
                    <div class="row">
                        <div class="col-lg-12 center z-index1">
                            <h1 class="title"><%= categoryName %></h1> <!-- Display category name -->
